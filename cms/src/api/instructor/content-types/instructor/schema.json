{
  "kind": "collectionType",
  "collectionName": "instructors",
  "info": {
    "singularName": "instructor",
    "pluralName": "instructors",
    "displayName": "Instructor"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "blocks"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "instructor"
    }
  }
}
